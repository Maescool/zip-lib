{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es2017",
        "outDir": "../out",
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
    }
}