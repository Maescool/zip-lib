    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "compile-all",
            "name": "Run Mocha Test",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/test/out/*.js", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        }
    ]
}