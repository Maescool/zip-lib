{
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": ".",
        "moduleResolution": "node",
        "target": "es5",
		"outDir": "../lib",
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
		"noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
	}
}