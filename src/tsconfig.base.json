{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
    }
}